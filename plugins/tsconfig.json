{
  "extends": "@lipemat/js-boilerplate/config/tsconfig.json",
  "include": [
    "./**/*.ts",
    "../helpers/**/*.ts",
    "../index.ts"
  ],
  "compilerOptions": {
    "declaration": false,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2024",
    "verbatimModuleSyntax": true
  }
}
