{
  "extends": "@lipemat/js-boilerplate/config/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2024",
    "verbatimModuleSyntax": true
  },
  "include": [
    "./index.ts",
    "jest/**/*.ts",
    "jest/**/*.tsx",
    "plugins/**/*.ts"
  ]
}
